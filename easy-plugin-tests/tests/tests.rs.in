easy_plugin! {
    struct Arguments {
        $attr:attr
        $ty:ty
        $tok:tok
        $tt:tt
        $attr_list:attr_list
        $ty_vec:ty_vec
    SEQUENCES_OPTION:
        $($seqo:ident)?
        $($($seqoo:ident)?)?
        $($($($seqooo:ident)?)?)?
    SEQUENCES_VEC:
        $($seqv:ident), +;
        $($($seqvv:ident):*), +;
        $($($($seqvvv:ident).*):*), +;
    SEQUENCES_MIXED:
        $($($seqov:ident)?), +;
        $($($seqvo:ident), +)?;
        $($($($seqovo:ident)?), +)?;
        $($($($seqvov:ident), +)?), +;
    SEQUENCES_NAMED:
        $nseqo:(foo)?
        $nseqv:(foo), *;
    ENUMS:
        $e1:{A($attr:attr), B($ty:ty)}
        $e2:{A($attr:attr), B($ty:ty)}
        $($oe:{A($attr:attr), B($ty:ty)})?
        $($($ooe:{A($attr:attr), B($ty:ty)})?)?
        $($ve:{A($attr:attr), B($ty:ty)}), *;
        $($($vve:{A($attr:attr), B($ty:ty)}):*), *;
    }

    pub fn expand_struct(
        _: &mut ExtCtxt, span: Span, _: Arguments
    ) -> PluginResult<Box<MacResult>> {
        Ok(DummyResult::any(span))
    }
}

#[test]
fn test_struct() {
    let source = r#"
        #[foo="bar"]
        i32
        foo
        (bar)
        #[foo(bar, baz)]
        [i32]
    SEQUENCES_OPTION:
        foo
        bar
        baz
    SEQUENCES_VEC:
        foo, bar, baz;
        , foo, bar: baz;
        , foo, foo.bar, foo: bar, foo.bar: baz.qux;
    SEQUENCES_MIXED:
        foo, , bar;
        foo, bar, baz;
        foo, , bar;
        foo, bar, baz;
    SEQUENCES_NAMED:
        foo
        foo, foo;
    ENUMS:
        #[foo="bar"]
        i32
        #[foo="bar"]
        i32
        #[foo="bar"], i32, #[foo(bar, baz)], f32;
        #[foo="bar"], i32: #[foo(bar, baz)], f32;
    "#;


    let session = ParseSess::new();
    let config = ExpansionConfig::default("".into());
    let mut resolver = DummyResolver;
    let mut context = ExtCtxt::new(&session, vec![], config, &mut resolver);
    let tts = context.parse_tts(source.into());
    expand_struct(&mut context, DUMMY_SP, &tts);
}
